<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.getmotion.GetMotionMain">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="254dp"
        android:layout_height="23dp"
        android:text="TextView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView4"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="254dp"
        android:layout_height="23dp"
        android:text="TextView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView"
        app:layout_constraintRight_toLeftOf="@+id/checkBox"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="254dp"
        android:layout_height="23dp"
        android:text="TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.508"
        app:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="ctrlRecord"
        android:text="@string/control_button"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="254dp"
        android:layout_height="23dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/select_box"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView"
        app:layout_constraintRight_toRightOf="parent" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="508dp"
        android:layout_height="196dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
